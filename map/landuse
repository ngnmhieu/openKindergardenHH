    }
  }
  
  /* Naturgebiet */
  [type = 'reserve'] {
    [zoom >= 11] {
      line-color: @grass;
      line-width: 0.5;
      
      [zoom >= 14] {
        line-width: 1;
      }
    }
  }
  
  /* ab Zoomlevel 16 */
  [zoom >= 16] {
    /* Hecke */
    [type = 'hedge'] {
      line-color: darken(@forest, 10);
      polygon-fill: @wood;
      line-width: 0.4;
    }
    
    /* Böschung */
    [type = 'embankment'] {
