@power: @parking;
@restArea: @parking; //services
@retail: @commercial;
@sand: @desert;
@track: @wood;
@vineyard: @grass;


#landuse {
  /* Schwimmbecken */
  [type = 'swimming_pool'] {
    [zoom >= 14] {
      polygon-fill: @water;
    }
  }

  /* Kinderspielplatz */
  [type = 'playground'] {
    [zoom >= 13] {
      polygon-fill: @playground;
      line-color: @darkGrey;
      line-width: 0.3;
    }
  }

  /* Campingplatz, Rastplatz */
  [type = 'camp_site'],
  [type = 'caravan_site'],
  [type = 'picnic_site'] {
    [zoom >= 13] {
      polygon-fill: @campsite;
      polygon-opacity: 0.5;
      line-color: @darkGrey;
      line-width: 0.3;
    }
  }

  /* Touristenattraktion */
  [type = 'attraction'] {
    [zoom >= 11] {
      polygon-fill: @attraction;
    }
  }

  /* Steinbruch */
  [type = 'landuse_quarry'] {
    [zoom >= 11] {
      line-color: @darkGrey;
      line-width: 0.5;
    }
  }

  /* Weinberg */
  [type = 'vineyard'] {
    [zoom >= 11] {
      polygon-fill: @vineyard;
    }
  }

  /* Friedhof */
  [type = 'cemetery'],
  [type = 'grave_yard'],
  [type = 'grave_yard'] {
    [zoom >= 11][zoom < 14] {
      polygon-fill: @cemetery;
    }
  }

  /* Wohngebiet */
  [type = 'residential'] {
    [zoom >= 11] {
      polygon-fill: @residential;
    }
  }

  /* Garagen */
  [type = 'garages']
    [zoom >= 12] {
      polygon-fill: @garages;
      polygon-opacity: 0.2;
    }
  }

  /* Kaserne */
  [type = 'military_barracks'] {
  	[zoom >= 11] {
      polygon-fill: @barracks;
    }
  }

  /* Feld, Acker */
  [type = 'field'] {
    [zoom >= 11] {
      polygon-fill: lighten(@field, 10);
      polygon-opacity: 0.2;
      
      [zoom >= 14] {
        line-width: 0.3;
        line-opacity: 0.4;
        line-color: lighten(@field, 20);
      }
    }
  }

  /* Gefahrenbereich */
  [type = 'danger_area'] {
    [zoom >= 11] {
      polygon-fill: @dangerArea;
      polygon-opacity: 0.3;
    }
  }

  /* Wiese, Gras */
  [type = 'meadow'],
  [type = 'grass'] {
    [zoom >= 11] {
      polygon-fill: @grass;
    }
  }

  [type = 'leisure_park'],
  [type = 'leisure_recreation_ground'] {
