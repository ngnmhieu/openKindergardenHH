  [type = 'industrial'],
  [type = 'railway'] {
    [zoom >= 11] {
      polygon-fill: @industrial;
    }
  }

  [type = 'station'],
  [type = 'generator'] {
    [zoom >= 11] {
      polygon-fill: @power;
      
      [zoom >= 12] {
        line-color: @darkGrey;
        line-width: 0.4;
      }
    }
  }

  [type = 'sub_station'] {
    [zoom >= 13] {
