  }

  /* Parkplatz */
  [type = 'parking'] {
    [zoom >= 11] {
      polygon-fill: @parking;
      
      [zoom >= 15] {
        line-color: darken(@parking, 10);
        line-width: 0.3;
      }
    }
  }

  /* Vorfeldfläche */
  [type = 'apron'] {
